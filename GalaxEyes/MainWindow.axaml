<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		x:Class="GalaxEyes.MainWindow"
		xmlns:local="clr-namespace:GalaxEyes"
		Title="GalaxEyes">
	<TabControl Margin="5">
		<TabItem Header="Scan">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="400" MinWidth="300"/>
					<ColumnDefinition Width="5"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Panel Grid.Column="0">
					<Grid Margin="20">
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="*"/>
							<RowDefinition Height="Auto"/>
						</Grid.RowDefinitions>

						<!-- Header -->
						<StackPanel Grid.Row="0" Spacing="6">
							<TextBlock Text="Optimizers" FontSize="24"/>
						</StackPanel>

						<!-- Optimizers -->
						<ScrollViewer Grid.Row="1" >
							<ItemsControl x:Name="OptimizerList" Padding="10">
								<ItemsControl.ItemTemplate>
									<DataTemplate x:DataType="local:OptimizerRow">
										<Grid Margin="4">
											<Grid.ColumnDefinitions>
												<ColumnDefinition Width="Auto"/>
												<ColumnDefinition Width="*"/>
												<ColumnDefinition Width="Auto"/>
											</Grid.ColumnDefinitions>

											<CheckBox Grid.Column="0"
													  VerticalAlignment="Center"/>

											<TextBlock Grid.Column="1"
													   Margin="8,0"
													   VerticalAlignment="Center"
													   Text="{Binding Label}"/>

											<Button Grid.Column="2"
													Content="Settings"
													Height="24"
													Padding="3"
													VerticalAlignment="Center"/>
										</Grid>
									</DataTemplate>
								</ItemsControl.ItemTemplate>
							</ItemsControl>
						</ScrollViewer>

						<!-- Start button -->
						<Button Grid.Row="2"
								FontSize="24"
								Content="Start Scan"
								HorizontalAlignment="Center"
								Margin="0,10,0,0"/>
					</Grid>
				</Panel>

				<GridSplitter
				Grid.Column="1"
				Width="1"
				HorizontalAlignment="Stretch"
				Margin="5 0 5 0">
					<GridSplitter.Styles>
						<Style Selector="GridSplitter">
							<Setter Property="Background" Value="#666"/>
						</Style>
						<Style Selector="GridSplitter:pointerover">
							<Setter Property="Background" Value="#AAA"/>
						</Style>
					</GridSplitter.Styles>
				</GridSplitter>
				<Panel Grid.Column="2">
					<TextBlock FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center">Waiting for scan...</TextBlock>
				</Panel>

			</Grid>
		</TabItem>
		<TabItem Header="Settings">
			<StackPanel Spacing="6">
				<TextBlock Text="Mod Directory"/>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
					<Button Grid.Column="0"
								Content="Open Folder" Margin="0 0 10 0 "/>
					<TextBox Grid.Column="1" Watermark="The path to your mod"/>
				</Grid>
				
				<TextBlock Text="Theme"/>
				<ComboBox SelectedIndex="0" MaxDropDownHeight="100">
					<ComboBoxItem>System</ComboBoxItem>
					<ComboBoxItem>Dark</ComboBoxItem>
					<ComboBoxItem>Light</ComboBoxItem>
				</ComboBox>
			</StackPanel>
		</TabItem>
	</TabControl>
</Window>
